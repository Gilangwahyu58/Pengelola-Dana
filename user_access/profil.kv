<ProfileScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 300
            padding: 10
            spacing: 10
            # Menambahkan warna latar belakang abu-abu biru muda pada BoxLayout ini
            canvas.before:
                Color:
                    rgba: 0.7, 0.7, 1, 1  # Warna abu-abu biru
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                size_hint_y: None
                height: 100

            Label:
                text: 'Akun Saya'
                font_size: 28
                color: (0, 0, 0, 1)
                halign: 'center'
                size_hint_y: None
                height: 50
                font_name: 'assets/font/raidercrusader.ttf'

            Image:
                source: 'assets/image/icon_profil.png'  # Ganti dengan gambar foto profil
                size_hint: (1, None)
                height: 120

            Label:
                text: 'User'
                font_size: 18
                size_hint_y: None
                height: 50
                color: (0, 0, 0, 1)

        ScrollView:
            size_hint: (1, None)
            size: (350, 300)

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: 10
                spacing: 10

                Label:
                    size_hint_y: None
                    height: 30

                Button:
                    text: 'Login dan tautkan desa anda'
                    size_hint_y: None
                    height: 50
                    background_color: (0.2, 0.6, 0.8, 1)
                    on_release: root.on_login_click()

                Button:
                    text: 'Silahkan daftar menjadi admin'
                    size_hint_y: None
                    height: 50
                    background_color: (0.2, 0.6, 0.8, 1)
                    on_release: root.on_daftar_click()

        # Bottom Navigation
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            padding: 5

            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_beranda.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas

                    # Label teks di bawah gambar
                    Label:
                        text: 'Beranda'
                        font_size: 12
                        size_hint: 1, 0.4  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah

                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'beranda'

            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_penggunaan.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas

                    # Label teks di bawah gambar
                    Label:
                        text: 'Penggunaan'
                        font_size: 12
                        size_hint: 1, 0.4  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah

                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'penggunaan'


            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_kemajuan.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas

                    # Label teks di bawah gambar
                    Label:
                        text: 'Kemajuan'
                        font_size: 12
                        size_hint: 1, 0.4  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah

                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'kemajuan'

            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_profil.png'
                        size_hint: 0.8, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas
                    # Label teks di bawah gambar
                    Label:
                        text: 'Profil'
                        font_size: 12
                        size_hint: 0.8, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah
                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'profil'
                        canvas.before:
                            Color:
                                rgba: 0, 0, 0, 1  # Warna garis
                            Line:
                                points: self.x, self.y + self.height, self.x + self.width, self.y + self.height  # Garis di atas tombol
                                width: 1.2  # Ketebalan garis