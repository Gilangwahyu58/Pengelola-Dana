<DanaDesaScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 120
            padding: 10
            spacing: 10

            BoxLayout:
                orientation: 'vertical'
                padding: 5
                size_hint_x: 0.7
                Label:
                    size_hint_y: None
                    height: 30
                Label:
                    text: 'Rincian Data\nKeuangan Desa'  # Menggunakan '\n' untuk baris baru
                    font_size: 24
                    color: 0, 0, 0, 1
                    size_hint_y: None
                    height: 120
                    font_name: 'assets/font/raidercrusader.ttf'
                    halign: 'center'  # Mengatur agar teks rata tengah
                    valign: 'middle'  # Mengatur agar teks berada di tengah vertikal
                    markup: True  # Mengaktifkan markup untuk format teks
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: 10
                spacing: 10  # Jarak antara elemen

                # Text Input untuk jumlah keuangan desa
                Label:
                    text: 'Masukkan Keuangan Desa :'
                    font_size: 14
                    bold: True
                    color: 0, 0, 0, 1
                    markup: True
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: 50
                    padding: 5
                    TextInput:
                        id: keuangan_input
                        text: '0'  # Nilai default
                        font_size: 14
                        multiline: False
                        hint_text: 'Masukkan jumlah keuangan desa'
                        input_filter: 'int'  # Hanya menerima input angka

                # GridLayout untuk menampilkan daftar penggunaan
                GridLayout:
                    id: usage_list
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height

                # Label untuk total penggunaan
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: 30
                    padding: 5
                    Label:
                        id: penggunaan
                        text: 'Total Penggunaan Dana:.....'
                        font_size: 14
                        color: 0, 0, 0, 1
                        markup: True
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size

                # Label untuk sisa dana
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: 30
                    padding: 5
                    Label:
                        id: sisa
                        text: 'Keuangan Desa yang tersisa:.....'
                        font_size: 14
                        color: 0, 0, 0, 1
                        markup: True
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size

                # Button untuk menyimpan data
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 50
                    Button:
                        text: 'Simpan'
                        background_color: 0.2, 0.6, 0.8, 1
                        color: 1, 1, 1, 1
                        on_release: root.save_financial_data()

        # Bottom Navigation
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            padding: 5
            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4 
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_beranda.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas
                    # Label teks di bawah gambar
                    Label:
                        text: 'Beranda'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah
                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'adm_beranda'
                        
            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4 
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_penggunaan.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas

                    # Label teks di bawah gambar
                    Label:
                        text: 'Penggunaan'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah

                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'adm_penggunaan'

            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4 
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_kemajuan.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas

                    # Label teks di bawah gambar
                    Label:
                        text: 'Kemajuan'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah

                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'adm_kemajuan'

            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4 
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_profil.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas

                    # Label teks di bawah gambar
                    Label:
                        text: 'Profil'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah

                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'adm_profil'
                        canvas.before:
                            Color:
                                rgba: 0, 0, 0, 1  # Warna garis
                            Line:
                                points: self.x, self.y + self.height, self.x + self.width, self.y + self.height  # Garis di atas tombol
                                width: 1.2  # Ketebalan garis
