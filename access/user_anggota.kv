<UserAnggotaScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Warna latar belakang putih
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        # Top Layout: Centered text 'Perangkat Desa'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 80
            padding: 10
            spacing: 10

            Label:
                text: 'Perangkat Desa'
                font_size: 24
                color: 0, 0, 0, 1  # Warna teks hitam
                halign: 'center'
                valign: 'middle'
                text_size: self.size
                size_hint_y: None
                height: 80
                font_name: 'assets/font/raidercrusader.ttf'

        # Middle Layout (No ScrollView)
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, None
            height: 450  # Sesuaikan tinggi untuk menghindari scrolling
            
            GridLayout:
                cols: 2
                size_hint_y: None
                height: self.minimum_height  # Mengatur tinggi otomatis berdasarkan konten
                padding: 5
                spacing: 10

                Label:
                    text: 'Nama'
                    color: 0, 0, 0, 1
                    size_hint_y: None
                    height: 40
                    halign: 'center'
                    text_size: self.size
                    size_hint_y: None
                    bold: True
                Label:
                    id: nama_label
                    text: ''  # Pastikan ini diisi di Python
                    size_hint_y: None
                    color: 0, 0, 0, 1
                    height: 40
                    font_size: 14
                    halign: 'center'
                    text_size: self.size

                Label:
                    text: 'Jabatan'
                    color: 0, 0, 0, 1
                    height: 40
                    halign: 'center'
                    text_size: self.size
                    size_hint_y: None
                    bold: True
                Label:
                    id: jabatan_label
                    text: ''  # Pastikan ini diisi di Python
                    color: 0, 0, 0, 1
                    height: 40
                    font_size: 14
                    halign: 'center'
                    text_size: self.size

                Label:
                    text: 'Masa Periode'
                    color: 0, 0, 0, 1
                    height: 40
                    halign: 'center'
                    text_size: self.size
                    size_hint_y: None
                    bold: True
                Label:
                    id: masa_periode_label
                    text: ''  # Pastikan ini diisi di Python
                    color: 0, 0, 0, 1
                    height: 40
                    font_size: 14
                    halign: 'center'
                    text_size: self.size

                Label:
                    text: 'No. Telepon'
                    color: 0, 0, 0, 1
                    height: 40
                    halign: 'center'
                    text_size: self.size
                    size_hint_y: None
                    bold: True
                Label:
                    id: no_telp_label
                    text: ''  # Pastikan ini diisi di Python
                    color: 0, 0, 0, 1
                    height: 40
                    font_size: 14
                    halign: 'center'
                    text_size: self.size

            # Spacing
            Label:
                text: ''
                size_hint_y: None
                height: 200  # Spacing

        # Bottom Navigation
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            padding: 5

            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_beranda.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas
                    # Label teks di bawah gambar
                    Label:
                        text: 'Beranda'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah
                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'peng_beranda'
                        canvas.before:
                            Color:
                                rgba: 0, 0, 0, 1  # Warna garis
                            Line:
                                points: self.x, self.y + self.height, self.x + self.width, self.y + self.height  # Garis di atas tombol
                                width: 1.2  # Ketebalan garis
            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_penggunaan.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas

                    # Label teks di bawah gambar
                    Label:
                        text: 'Penggunaan'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah

                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'peng_penggunaan'


            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_kemajuan.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas

                    # Label teks di bawah gambar
                    Label:
                        text: 'Kemajuan'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah

                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'peng_kemajuan'

            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_profil.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas

                    # Label teks di bawah gambar
                    Label:
                        text: 'Profil'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah

                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'peng_profil'
