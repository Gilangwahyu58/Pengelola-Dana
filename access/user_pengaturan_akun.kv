<UserPengaturanAkunScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 350
            padding: 10
            spacing: 10
            # Menambahkan warna latar belakang abu-abu biru muda pada BoxLayout ini
            canvas.before:
                Color:
                    rgba: 0.8, 0.8, 0.8, 1  # Warna abu-abu paling muda
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                size_hint_y: None
                height: 100

            Label:
                text: 'Akun Saya'
                font_size: 28
                color: (0, 0, 0, 1)
                halign: 'center'
                size_hint_y: None
                height: 50
                font_name: 'assets/font/raidercrusader.ttf'

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: 200

                AsyncImage:
                    id: image_preview
                    source: ''  # Sumber gambar akan diisi di dalam kode
                    size_hint_y: None
                    height: 170  # Mengurangi tinggi agar total tinggi BoxLayout tetap 200
                    allow_stretch: True
                    keep_ratio: True
                BoxLayout:
                    size_hint_y: None
                    height: 40
                    spacing: 10
                    
                    Button:
                        text: 'Pilih Gambar'
                        size_hint_x: 0.5
                        background_color: 0.2, 0.6, 0.8, 1
                        color: 1, 1, 1, 1
                        on_press: root.open_image_selector()
                    
                    Button:
                        text: 'Hapus Gambar'
                        size_hint_x: 0.5
                        background_color: 0.2, 0.6, 0.8, 1
                        color: 1, 1, 1, 1
                        on_press: root.clear_image()
            TextInput:
                id: username
                hint_text: 'Masukkan Nama Pengguna'
                multiline: True
                size_hint_y: None
                height: 50
                font_size: 18
                text_size: self.size
                padding: 10
                background_normal: ''

        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: 10
                Label:
                    size_hint_y: None
                    height: 30  # Garis pemisah
                # Bagian TextInput untuk keterangan yang bisa diketik dan di-enter
                Label:
                    text: 'Nama Lengkap'
                    font_size: 16
                    color: 0, 0, 0, 1
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                    size_hint_y: None
                    height: 40
                    bold: True
                TextInput:
                    id: nama_lengkap
                    hint_text: 'Masukkan Nama Lengkap'
                    multiline: True
                    size_hint_y: None
                    height: 40
                    font_size: 12
                    text_size: self.size
                    padding: 10
                    background_normal: ''
                Label:
                    text: 'No. Telepon'
                    font_size: 16
                    color: 0, 0, 0, 1
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                    size_hint_y: None
                    height: 40
                    bold: True
                TextInput:
                    id: no_telepon
                    hint_text: 'Masukkan No. Telepon'
                    multiline: True
                    size_hint_y: None
                    height: 40
                    font_size: 12
                    text_size: self.size
                    padding: 10
                    background_normal: ''
                
                # Tombol Edit
                Button:
                    text: 'Simpan'
                    size_hint_y: None
                    height: 50
                    background_color: 0.2, 0.6, 0.8, 1
                    color: 1, 1, 1, 1
                    on_press: root.save_changes()                

        # Bottom Navigation
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            padding: 5
            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4 
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_beranda.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas
                    # Label teks di bawah gambar
                    Label:
                        text: 'Beranda'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah
                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'peng_beranda'
            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4 
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_penggunaan.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas
                    # Label teks di bawah gambar
                    Label:
                        text: 'Penggunaan'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah
                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'peng_penggunaan'

            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4 
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_kemajuan.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas

                    # Label teks di bawah gambar
                    Label:
                        text: 'Kemajuan'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah

                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'peng_kemajuan'
                        
            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4 
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_profil.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas

                    # Label teks di bawah gambar
                    Label:
                        text: 'Profil'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah

                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'peng_profil'
                        canvas.before:
                            Color:
                                rgba: 0, 0, 0, 1  # Warna garis
                            Line:
                                points: self.x, self.y + self.height, self.x + self.width, self.y + self.height  # Garis di atas tombol
                                width: 1.2  # Ketebalan garis
