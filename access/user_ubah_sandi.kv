<UserUbahSandiScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 80
            padding: 10
            spacing: 10

            BoxLayout:
                orientation: 'vertical'
                padding: 5
                size_hint_x: 0.7
                # Bagian atas dengan judul sesuai teks tombol yang diklik
                Label:
                    size_hint_y: None
                    height: 30  # Garis pemisah
                Label:
                    text: 'Ubah Kata Sandi' 
                    font_size: 24
                    color: 0, 0, 0, 1
                    size_hint_y: None
                    height: 50
                    font_name: 'assets/font/raidercrusader.ttf'
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: 10
                Label:
                    size_hint_y: None
                    height: 50  # Garis pemisah
                Label:
                    text: 'Kata Sandi Lama'
                    font_size: 14
                    color: 0, 0, 0, 1
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                    size_hint_y: None
                    height: 40
                    bold: True
                TextInput:
                    id: kata_sandi_lama
                    hint_text: 'Masukkan kata sandi lama'
                    multiline: True
                    size_hint_y: None
                    height: 40
                    font_size: 12
                    text_size: self.size
                    padding: 10
                    background_normal: ''
                    password: True
                Label:
                    text: 'Kata Sandi Baru'
                    font_size: 14
                    color: 0, 0, 0, 1
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                    size_hint_y: None
                    height: 40
                    bold: True
                TextInput:
                    id: kata_sandi_baru
                    hint_text: 'Masukkan kata sandi baru'
                    multiline: True
                    size_hint_y: None
                    height: 40
                    font_size: 12
                    text_size: self.size
                    padding: 10
                    background_normal: ''
                    password: True
                Label:
                    text: 'Konfirmasi Kata Sandi'
                    font_size: 14
                    color: 0, 0, 0, 1
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                    size_hint_y: None
                    height: 40
                    bold: True
                TextInput:
                    id: konfirmasi_kata_sandi
                    hint_text: 'Konfirmasi kata sandi baru'
                    multiline: True
                    size_hint_y: None
                    height: 40
                    font_size: 12
                    text_size: self.size
                    padding: 10
                    background_normal: ''
                    password: True
                Label:
                    size_hint_y: None
                    height: 30  # Garis pemisah
                # Checkbox untuk lihat kata sandi
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 20
                    spacing: 5
                    pos_hint: {"right": 1}

                    CheckBox:
                        id: lihat_kata_sandi
                        on_active: 
                            kata_sandi_lama.password = not self.active  
                            kata_sandi_baru.password = not self.active  
                            konfirmasi_kata_sandi.password = not self.active 
                        color: 0, 0, 0, 1
                        size_hint: (None, None)
                        size: (20, 20)

                    Label:
                        text: "Lihat kata sandi"
                        font_size: '14sp'
                        color: 0, 0, 0, 1
                        size_hint_x: None
                        width: 100
                Label:
                    size_hint_y: None
                    height: 10  # Garis pemisah
                Button:
                    text: 'Simpan'
                    size_hint_y: None
                    height: 44
                    background_color: 0.2, 0.6, 0.8, 1
                    color: 1, 1, 1, 1
                    pos_hint: {'center_x': 0.5}  # Memastikan tombol berada di tengah
                    on_release: root.ubah_sandi()
        # Bottom Navigation
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            padding: 5
            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4 
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_beranda.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas
                    # Label teks di bawah gambar
                    Label:
                        text: 'Beranda'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah
                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'peng_beranda'
            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4 
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_penggunaan.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas
                    # Label teks di bawah gambar
                    Label:
                        text: 'Penggunaan'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah
                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'peng_penggunaan'

            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4 
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_kemajuan.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas

                    # Label teks di bawah gambar
                    Label:
                        text: 'Kemajuan'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah

                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'peng_kemajuan'

            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4 
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_profil.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas

                    # Label teks di bawah gambar
                    Label:
                        text: 'Profil'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah

                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'peng_profil'
                        canvas.before:
                            Color:
                                rgba: 0, 0, 0, 1  # Warna garis
                            Line:
                                points: self.x, self.y + self.height, self.x + self.width, self.y + self.height  # Garis di atas tombol
                                width: 1.2  # Ketebalan garis
