<PenggunaanEditScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 80
            padding: 10
            spacing: 10

            BoxLayout:
                orientation: 'vertical'
                padding: 5
                size_hint_x: 0.7
                # Bagian atas dengan judul sesuai teks tombol yang diklik
                Label:
                    size_hint_y: None
                    height: 30  # Garis pemisah
                TextInput:
                    id: usage_title
                    hint_text: 'Judul'
                    color: 0, 0, 0, 1
                    multiline: True
                    size_hint_y: None
                    height: 50
                    font_name: 'assets/font/raidercrusader.ttf'
                    font_size: 24
                    text_size: self.size
                    padding: 10
                    halign: 'center'
                    background_normal: ''

        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: 10
                # Label untuk tanggal pembuatan
                Label:
                    id: usage_date
                    text: 'Tanggal'  # Ini akan diganti dengan tanggal dari database
                    font_size: 16
                    color: 0, 0, 0, 1
                    size_hint_y: None
                    height: 30
                # TextInput untuk jumlah
                TextInput:
                    id: usage_amount
                    hint_text: 'Masukkan jumlah'
                    multiline: False
                    size_hint_y: None
                    height: 50
                    font_size: 16
                    text_size: self.size
                    padding: 10
                    background_normal: ''

                # Bagian TextInput untuk keterangan yang bisa diketik dan di-enter
                TextInput:
                    id: usage_description
                    hint_text: 'Masukkan keterangan di sini...'
                    multiline: True
                    size_hint_y: None
                    height: 200
                    font_size: 16
                    text_size: self.size
                    padding: 10
                    background_normal: ''

                # Tombol Edit dan Hapus
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 50

                    Button:
                        text: 'Edit'
                        background_color: 0.2, 0.6, 0.8, 1
                        color: 1, 1, 1, 1
                        on_release: root.edit_usage()

                    Button:
                        text: 'Hapus'
                        background_color: 0.2, 0.6, 0.8, 1
                        color: 1, 1, 1, 1
                        on_release: root.delete_usage()

        # Bottom Navigation
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            padding: 5
            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4 
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_beranda.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas
                    # Label teks di bawah gambar
                    Label:
                        text: 'Beranda'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah
                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'adm_beranda'
                        
            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4 
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_penggunaan.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas

                    # Label teks di bawah gambar
                    Label:
                        text: 'Penggunaan'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah

                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'adm_penggunaan'
                        canvas.before:
                            Color:
                                rgba: 0, 0, 0, 1  # Warna garis
                            Line:
                                points: self.x, self.y + self.height, self.x + self.width, self.y + self.height  # Garis di atas tombol
                                width: 1.2  # Ketebalan garis

            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4 
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_kemajuan.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas

                    # Label teks di bawah gambar
                    Label:
                        text: 'Kemajuan'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah

                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'adm_kemajuan'

            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4 
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_profil.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas

                    # Label teks di bawah gambar
                    Label:
                        text: 'Profil'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah

                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'adm_profil'
