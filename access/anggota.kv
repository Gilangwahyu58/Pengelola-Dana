<AnggotaScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        # Top Layout: Centered text 'Perangkat Desa'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 80
            padding: 10
            spacing: 10

            Label:
                text: 'Perangkat Desa'
                font_size: 24
                color: 0, 0, 0, 1
                halign: 'center'
                valign: 'middle'
                text_size: self.size
                size_hint_y: None
                height: 80
                font_name: 'assets/font/raidercrusader.ttf'

        # Middle Layout (No ScrollView)
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, None
            height: 450  # Adjust height to avoid scrolling

            # Profile image centered, not full width
            Label:
                text: 'Nama'
                size_hint_y: None
                height: 40  # Spacing
                bold: True
            TextInput:
                id: nama_input
                text: 'Nama'
                size_hint_y: None
                height: 40
                background_color: 0, 0, 0, 0  # Transparent background
                foreground_color: 0, 0, 0, 1  # Text color
                hint_text: 'Masukkan Nama'
                hint_text_color: 0.7, 0.7, 0.7, 1  # Color for hint text
                multiline: False
                cursor_color: 0, 0, 0, 1  # Cursor color
                pos_hint: {'center_x': 0.5}
                halign: 'center'

            Label:
                text: ''
                size_hint_y: None
                height: 30  # Spacing

            GridLayout:
                cols: 2
                size_hint_y: None
                height: 150
                padding: 5
                spacing: 10

                Label:
                    text: 'Jabatan:'
                    font_size: 14
                    color: 0, 0, 0, 1
                    halign: 'left'  # Align to the left
                    text_size: self.size  # Make sure the text uses the full width
                TextInput:
                    id: jabatan_input
                    text: 'Kepala Desa'
                    size_hint_y: None
                    height: 40
                    background_color: 0, 0, 0, 0  # Transparent background
                    foreground_color: 0, 0, 0, 1  # Text color
                    hint_text: 'Masukkan Jabatan'
                    font_size: 14
                    hint_text_color: 0.7, 0.7, 0.7, 1  # Color for hint text
                    multiline: False
                    padding_y: [22, 3]
                    cursor_color: 0, 0, 0, 1  # Cursor color
                    halign: 'center'
                    text_size: self.size

                Label:
                    text: 'Masa Periode:'
                    font_size: 14
                    color: 0, 0, 0, 1
                    halign: 'left'
                    text_size: self.size
                TextInput:
                    id: masa_periode_input
                    text: '2018-2024'
                    size_hint_y: None
                    height: 40
                    background_color: 0, 0, 0, 0  # Transparent background
                    foreground_color: 0, 0, 0, 1  # Text color
                    hint_text: 'Masukkan Masa Periode'
                    font_size: 14
                    hint_text_color: 0.7, 0.7, 0.7, 1  # Color for hint text
                    multiline: False
                    padding_y: [22, 3]
                    cursor_color: 0, 0, 0, 1  # Cursor color
                    halign: 'center'
                    text_size: self.size

                Label:
                    text: 'No. Telepon:'
                    font_size: 14
                    color: 0, 0, 0, 1
                    halign: 'left'
                    text_size: self.size
                TextInput:
                    id: no_telp_input
                    text: '081111111'
                    size_hint_y: None
                    height: 40
                    background_color: 0, 0, 0, 0  # Transparent background
                    foreground_color: 0, 0, 0, 1  # Text color
                    hint_text: 'Masukkan No. Telepon'
                    font_size: 14
                    hint_text_color: 0.7, 0.7, 0.7, 1  # Color for hint text
                    multiline: False
                    padding_y: [22, 3]
                    cursor_color: 0, 0, 0, 1  # Cursor color
                    halign: 'center'
                    text_size: self.size
            Label:
                text: ''
                size_hint_y: None
                height: 30  # Spacing

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 50
                padding: 10
                Button:
                    id: ubah_button  # Tambahkan ID agar bisa diakses dalam Python
                    text: 'Ubah'
                    size_hint_x: None
                    background_color: 0.2, 0.6, 0.8, 1
                    color: 1, 1, 1, 1
                    width: 100
                    on_release: root.ubah_anggota()
                    on_release: app.root.current = 'adm_beranda'
                Button:
                    id: hapus_button  # Tambahkan ID agar bisa diakses dalam Python
                    text: 'Hapus'
                    size_hint_x: None
                    background_color: 0.2, 0.6, 0.8, 1
                    color: 1, 1, 1, 1
                    width: 100
                    on_release: root.hapus_anggota()  # Panggil metode hapus_anggota
                    on_release: app.root.current = 'adm_beranda'
            Label:
                text: ''
                size_hint_y: None
                height: 150  # Spacing

        # Bottom Navigation
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            padding: 5
            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4 
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_beranda.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas
                    # Label teks di bawah gambar
                    Label:
                        text: 'Beranda'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah
                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'adm_beranda'
                        canvas.before:
                            Color:
                                rgba: 0, 0, 0, 1  # Warna garis
                            Line:
                                points: self.x, self.y + self.height, self.x + self.width, self.y + self.height  # Garis di atas tombol
                                width: 1.2  # Ketebalan garis
            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4 
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_penggunaan.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas

                    # Label teks di bawah gambar
                    Label:
                        text: 'Penggunaan'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah

                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'adm_penggunaan'

            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4 
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_kemajuan.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas

                    # Label teks di bawah gambar
                    Label:
                        text: 'Kemajuan'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah

                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'adm_kemajuan'

            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4 
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_profil.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas

                    # Label teks di bawah gambar
                    Label:
                        text: 'Profil'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah

                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'adm_profil'
