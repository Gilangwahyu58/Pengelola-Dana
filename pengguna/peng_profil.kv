<PengProfileScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 300
            padding: 10
            spacing: 10
            canvas.before:
                Color:
                    rgba: 0.7, 0.7, 1, 1  # Warna abu-abu biru
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                size_hint_y: None
                height: 100

            Label:
                text: 'Akun Saya'
                font_size: 28
                color: (0, 0, 0, 1)
                halign: 'center'
                size_hint_y: None
                height: 50
                font_name: 'assets/font/raidercrusader.ttf'

            Image:
                id: foto_profil
                source: 'assets/image/orang.png'
                size_hint: (1, None)
                height: 120

            Label:
                id: nama
                font_size: 18
                size_hint_y: None
                height: 50
                color: (0, 0, 0, 1)

        ScrollView:
            size_hint: (1, None)
            size: (350, 300)

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: 10
                spacing: 10

                Label:
                    size_hint_y: None
                    height: 10

                Label:
                    text: 'Layanan Kependudukan'
                    font_size: 18
                    bold: True
                    size_hint_y: None
                    height: 40
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                    color: (0, 0, 0, 1)
                Button:
                    text: 'Rincian Data Keuangan Desa'
                    font_size: 12
                    size_hint_y: None
                    height: 30
                    background_normal: ''
                    background_color: (0, 0, 0, 0)
                    color: (0, 0, 0, 1)
                    border: (0, 0, 0, 1)
                    canvas.before:
                        Color:
                            rgba: (0, 0, 0, 1)
                        Line:
                            points: self.x, self.y, self.right, self.y
                            width: 1
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                    on_release: app.root.current = 'user_dana_desa'

                # Tombol Biodata
                Button:
                    text: 'Biodata'
                    font_size: 12
                    size_hint_y: None
                    height: 30
                    background_normal: ''
                    background_color: (0, 0, 0, 0)
                    color: (0, 0, 0, 1)
                    border: (0 , 0, 0, 1)
                    canvas.before:
                        Color:
                            rgba: (0, 0, 0, 1)
                        Line:
                            points: self.x, self.y, self.right, self.y
                            width: 1
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                    on_release: app.root.current = 'user_biodata'

                # Label Akun
                Label:
                    text: 'Akun'
                    font_size: 18
                    bold: True
                    size_hint_y: None
                    height: 40
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                    color: (0, 0, 0, 1)

                # Tombol Pengaturan Akun
                Button:
                    text: 'Pengaturan Akun'
                    font_size: 12
                    size_hint_y: None
                    height: 30
                    background_normal: ''
                    background_color: (0, 0, 0, 0)
                    color: (0, 0, 0, 1)
                    border: (0, 0, 0, 1)
                    canvas.before:
                        Color:
                            rgba: (0, 0, 0, 1)
                        Line:
                            points: self.x, self.y, self.right, self.y
                            width: 1
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                    on_release: app.root.current = 'user_pengaturan_akun'

                # Tombol Ubah Kata Sandi
                Button:
                    text: 'Ubah Kata Sandi'
                    font_size: 12
                    size_hint_y: None
                    height: 30
                    background_normal: ''
                    background_color: (0, 0, 0, 0)
                    color: (0, 0, 0, 1)
                    border: (0, 0, 0, 1)
                    canvas.before:
                        Color:
                            rgba: (0, 0, 0, 1)
                        Line:
                            points: self.x, self.y, self.right, self.y
                            width: 1
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                    on_release: app.root.current = 'user_ubah_sandi'
                # Tombol Hapus Akun
                Button:
                    text: 'Hapus Akun'
                    font_size: 12
                    size_hint_y: None
                    height: 30
                    background_normal: ''
                    background_color: (0, 0, 0, 0)
                    color: (0, 0, 0, 1)
                    border: (0, 0, 0, 1)
                    canvas.before:
                        Color:
                            rgba: (0, 0, 0, 1)
                        Line:
                            points: self.x, self.y, self.right, self.y
                            width: 1
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                    on_release: root.hapus_akun()
                # Tombol Keluar
                Button:
                    text: 'Keluar'
                    font_size: 12
                    size_hint_y: None
                    height: 30
                    background_normal: ''
                    background_color: (0, 0, 0, 0)
                    color: (0, 0, 0, 1)
                    border: (0, 0, 0, 1)
                    canvas.before:
                        Color:
                            rgba: (0, 0, 0, 1)
                        Line:
                            points: self.x, self.y, self.right, self.y
                            width: 1
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                    on_press: app.root.current = 'beranda'

         # Bottom Navigation
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            padding: 5

            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_beranda.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas

                    # Label teks di bawah gambar
                    Label:
                        text: 'Beranda'
                        font_size: 12
                        size_hint: 1, 0.4  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah

                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'peng_beranda'

            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_penggunaan.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas
                    # Label teks di bawah gambar
                    Label:
                        text: 'Penggunaan'
                        font_size: 12
                        size_hint: 1, 0.5  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah
                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'peng_penggunaan'
                        
            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_kemajuan.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas

                    # Label teks di bawah gambar
                    Label:
                        text: 'Kemajuan'
                        font_size: 12
                        size_hint: 1, 0.4  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah

                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'peng_kemajuan'

            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, 1)
                width: self.parent.width / 4
                FloatLayout:
                    # Gambar di bagian atas
                    Image:
                        source: 'assets/image/icon_profil.png'
                        size_hint: 1, 0.5  # Ukuran gambar disesuaikan
                        allow_stretch: True
                        keep_ratio: True
                        pos_hint: {'center_x': 0.5, 'top': 1}  # Posisi gambar di atas

                    # Label teks di bawah gambar
                    Label:
                        text: 'Profil'
                        font_size: 12
                        size_hint: 1, 0.4  # Ukuran label disesuaikan
                        color: 0, 0, 0, 1
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size
                        pos_hint: {'center_x': 0.5, 'y': 0}  # Posisi label di bawah

                    # Tombol transparan menutupi gambar dan label
                    Button:
                        size_hint: 1, None
                        height: 44
                        pos_hint: {'x': 0, 'y': 0}  # Menempatkan tombol di bagian bawah
                        background_color: 0, 0, 0, 0  # Membuat tombol transparan agar gambar terlihat
                        on_release: app.root.current = 'peng_profil'
                        canvas.before:
                            Color:
                                rgba: 0, 0, 0, 1  # Warna garis
                            Line:
                                points: self.x, self.y + self.height, self.x + self.width, self.y + self.height  # Garis di atas tombol
                                width: 1.2  # Ketebalan garis
